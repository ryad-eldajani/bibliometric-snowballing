{
  "url": "http://bibliometric-snowballing.rocks/",
  "mail": "mail@mail.com",
  "useragent": "BibliometricSnowballing/1.0 ({url}; mailto: {mail})",
  "db": {
    "database": "biblio",
    "username": "biblio",
    "hostname": "127.0.0.1",
    "password": "password",
    "port": 3306
  },
  "smtp": {
    "hostname": "127.0.0.1",
    "username": "username",
    "password": "password",
    "auth": true,
    "tls": false,
    "port": 25
  },
  "session_ttl": 525600,
  "typo3": {
    "directory": "/srv/http/typo3.localhost"
  },
  "urls": {
    "/": {
      "controller": "Index/index",
      "methods": ["get"]
    },
    "/projects": {
      "controller": "Project/viewProjects",
      "methods": ["get"]
    },
    "/projects/new": {
      "controller": "Project/newProject",
      "methods": ["post"]
    },
    "/projects/delete": {
      "controller": "Project/deleteProject",
      "methods": ["post"]
    },
    "/projects/rename": {
      "controller": "Project/renameProject",
      "methods": ["post"]
    },
    "/projects/view/{projectId}": {
      "controller": "Project/viewProject",
      "methods": ["get"]
    },
    "/works/view/{workId}": {
      "controller": "Work/viewWork",
      "methods": ["get"]
    },
    "/works/new": {
      "controller": "Work/newWork",
      "methods": ["post"]
    },
    "/works/assign": {
      "controller": "Work/assignWorks",
      "methods": ["post"]
    },
    "/works/request/doi": {
      "controller": "Work/requestDoiWork",
      "methods": ["post"]
    },
    "/works/request/references": {
      "controller": "Work/requestDoiReferences",
      "methods": ["post"]
    },
    "/404": {
      "controller": "Index/notFound",
      "methods": ["get"]
    },
    "/login": {
      "controller": "Login/login",
      "methods": ["get", "post"]
    },
    "/logout": {
      "controller": "Login/logout",
      "methods": ["get"]
    },
    "/register": {
      "controller": "User/register",
      "methods": ["get", "post"]
    },
    "/password_reset": {
      "controller": "User/passwordReset",
      "methods": ["get", "post"]
    },
    "/profile": {
      "controller": "User/profile",
      "methods": ["get", "post"]
    },
    "/contact": {
      "controller": "Contact/contact",
      "methods": ["get", "post"]
    },
    "/about": {
      "controller": "Static/viewAbout",
      "methods": ["get"]
    }
  },
  "apis": {
    "crossref": {
      "class": "BS\\Model\\Api\\CrossRefApi",
      "url": "https://api.crossref.org/works/{doi}",
      "method": "get"
    }
  }
}
